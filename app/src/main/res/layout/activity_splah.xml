<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.kdo94.alohamusic.SplahActivity">

    <TextView
        android:text="@string/splash_screen_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/splashTextView"
        android:layout_alignParentLeft="false"
        android:gravity="bottom|center"
        android:background="@drawable/hawaii_wave"
        android:textSize="36sp"
        tools:textColor="@android:color/background_light"
        android:textStyle="bold" />
</RelativeLayout>
